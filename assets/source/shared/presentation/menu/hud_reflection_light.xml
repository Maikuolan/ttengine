<?xml version="1.0" encoding="utf-8"?>
<presentation xmlns="http://intranet.twotribes.com/schemas/common/presentation.xsd"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="http://intranet.twotribes.com/schemas/common/presentation.xsd http://intranet.twotribes.com/schemas/common/presentation.xsd"
		permanent="true" fixed_timestep="0.016">

	<startvalues>
		<translation z="0.2"/>
		<origin y="-0.3"/>
		<scale scale="1.0"/>
	</startvalues>

	<frameanimstack>
		<frameanim directory="spritestrip/hud/reflection" ignore_fog="true" fps="12" looping="true" quad_width="1.75" quad_height="1">
			<begin frame="0" hold="true"/>
			<end   frame="0" hold="true"/>
		</frameanim>
	</frameanimstack>
	
	<coloranimstack>
		<color duration="0.1">
			<begin a="-50"/>
			<end a="-50"/>
		</color>
	</coloranimstack>

</presentation>
