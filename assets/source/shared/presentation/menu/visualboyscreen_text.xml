		xsi:schemaLocation="http://intranet.twotribes.com/schemas/common/presentation.xsd http://intranet.twotribes.com/schemas/common/presentation.xsd"
		permanent="true" fixed_timestep="0.016">
	
	<include file="presentation/menu/include"/>
		
	<startvalues>
		<origin x="c(origin_x)" y="c(origin_y)"/>
	</startvalues>

  <!-- SUBTITLES -->
	
	<!--conversation_back-->
	<frameanimstack>
		<musthave>
			<tag name="subtitle"/>
		</musthave>
		<frameanim directory="spritestrip/hud/avatar_bg" flip_horizontal="false" ignore_fog="false" fps="60" looping="false" quad_width="1.9" quad_height="0.25" direction="pingpong">
