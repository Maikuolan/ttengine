<?xml version="1.0" encoding="utf-8"?>
<presentation xmlns="http://intranet.twotribes.com/schemas/common/presentation.xsd"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="http://intranet.twotribes.com/schemas/common/presentation.xsd http://intranet.twotribes.com/schemas/common/presentation.xsd"
		permanent="true">
	
	<startvalues>
		<translation x="0.7" y="-0.15" z="-0.02"/>
		<scale scale="1.3"/>
	</startvalues>
	
	<!-- disabled -->
	<frameanimstack name="disabled">
		<frameanim directory="spritestrip/leveldoor/disabled/top" fps="3" looping="true" quad_width="3" quad_height="4.521" direction="forward">
			<begin frame="0" hold="true"/>
			<end   frame="0" hold="true"/>
		</frameanim>
	</frameanimstack>

	<frameanimstack name="disabled">
		<frameanim directory="spritestrip/leveldoor/disabled/ring" lightmask="use_alpha" fps="3" looping="true" quad_width="1.275" quad_height="3" direction="forward">
			<begin frame="0" hold="true"/>
			<end   frame="1" hold="true"/>
			<translation x="0.62" y="-1.3" z="0"/>
			<scale scale="1.1"/>
		</frameanim>
	</frameanimstack>
	
	<!-- enabled -->
	<frameanimstack name="enabled">
		<frameanim directory="spritestrip/leveldoor/enabled/top" lightmask="use_lightmask" fps="15" looping="false" quad_width="3" quad_height="4.521" direction="forward">
			<begin frame="0" hold="true"/>
			<end   frame="0" hold="true"/>
		</frameanim>
	</frameanimstack>
	
	<trigger type="audio" name="enabled" data="door_hacked"/>
	
</presentation>

